<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/no_network_layout"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="#cccccc"
        android:visibility="gone">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="网络异常,请检查网络是否连接正确"
            android:textColor="#ff0000" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/login_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="360.3dp"
        android:layout_marginTop="71.7dp"
        android:src="@mipmap/login_picture" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="75.3dp"
        android:layout_toRightOf="@+id/login_icon_layout"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textScaleX="1.2"
        android:textSize="16sp" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="275dp"
        android:layout_height="180dp"
        android:layout_marginLeft="336dp"
        android:layout_marginTop="105dp"
        android:background="@mipmap/login_windowbackgroud"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="29dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="24dp"
                android:gravity="left"
                android:text="用户名"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/edit_username_layout"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/edittext_white_bg"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@null"
                android:textSize="12sp" />


            <CheckBox
                android:id="@+id/auto_login_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动登录"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="16.7dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="24dp"
                android:gravity="left"
                android:text="密码"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/edit_userpass_layout"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/edittext_white_bg"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@null"
                android:textSize="12sp" />


            <CheckBox
                android:id="@+id/remember_pass_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="16.7dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="24dp"
                android:gravity="left"
                android:text="服务器地址"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/edit_serviceip_layout"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/edittext_white_bg"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@null"
                android:textSize="12sp" />

            <CheckBox
                android:id="@+id/remembe_serverip_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改地址"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.7dp">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/userlogin_button_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_login_selected" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/userlogin_button_cancel_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_login_cancel_selected" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/loin_error_infor_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="15dp"
        android:text="Error"
        android:textColor="#FF0000"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_loading"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:contentDescription="数据加载中。。。"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_loading"
        android:visibility="gone" />



    <ImageButton
        android:id="@+id/land_set_direction_btn_layout"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/app_setting_icon" />

</RelativeLayout>