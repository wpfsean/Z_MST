<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_showArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/remote_device_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中科腾海wifi"
            android:textColor="#162834"
            android:textSize="20sp" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/layout_hideArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alarm_item_bg"
        android:padding="10dp">


        <TextView
            android:id="@+id/wifi_connet_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="连接"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/wifi_disconnet_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="断开"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/wifi_details_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="详情"
            android:textAllCaps="false" />

    </RelativeLayout>
</LinearLayout>